- set_page_specific_title "Pathways Videos"

.content-wrapper

  %h2= "Pathways Videos"

  %table.table
    %tbody
      - @videos.each do |video|
        %tr
          %td
            = link_to video.title, video.link, target: "_blank"

            - if can? :edit, Video
              = link_to "Edit",
                edit_video_path(video),
                class: "btn btn-mini",
                style: "float: right; margin-left: 10px;"
            - if can? :destroy, Video
              = link_to "Delete",
                video_path(video),
                class: "btn btn-mini",
                style: "float: right; margin-left: 10px;",
                method: :delete
