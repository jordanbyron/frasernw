!!!
%html
  %head
    %title= page_title
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{"name"=>"viewport", :content=>"initial-scale=1.0"}

    = stylesheet_link_tag "application"
    /[if lte IE 7]
      = stylesheet_link_tag "ie.css", :media => 'screen'
    /[if IE 7]
      = stylesheet_link_tag "font-awesome-ie7.css", :media => 'screen, print'
    = javascript_include_tag "application"
    = csrf_meta_tag
    = render "layouts/ie_compatibility_warning"

    = yield(:head)

    = render "partials/analytics_setup"

  %body{:id => "#{params[:controller]}_page"}
    #main-nav.navbar
      .navbar-inner
        .container
          %a#logo.brand.ajax{"href" => root_url}

    #body.container
      .row
        #content.span12
          #container
            - flash.each do |type, msg|
              .alert.alert-success= msg
            = yield

      .row
        #email.content-wrapper
          = mail_to primary_support_email,
            "Contact Us",
            target: "_blank",
            encode: "javascript"
