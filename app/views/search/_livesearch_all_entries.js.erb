<% cache("livesearch_all_entries_" + specialization_path(specialization)) do

  search_data = Array.new

  order_map = {
    "Specializations" => "1",
    "Specialists" => "2",
    "Clinics" => "3",
    "Content" => "4",
    "Procedures" => "5",
    "Hospitals" => "6",
    "Languages" => "7"
  }

  ScCategory.all.each do |category|
    order_map[ category.name ] = ( order_map.length + 1 ).to_s
  end

  Specialist.includes(
    :specialist_specializations => :specialization,
    :specialist_offices => {
      :office => {
        :location => [
          {:address => :city},
          {:hospital_in => {:location => { :address => :city}}},
          {:location_in => [
            {:address => :city},
            {:hospital_in => {:location => { :address => :city}}}
          ]}
        ]
      }
    }
  ).complete_in(specialization).each do |specialist|
    entry = {
      "n" => specialist.padded_billing_number ? specialist.name + " - MSP #" + specialist.padded_billing_number: specialist.name,
      "sp" => specialist.specialist_specializations.map { |ss| ss.specialization_id },
      "c" => specialist.cities.map{ |city| city.id },
      "st" => specialist.status_class_hash,
      "id" => specialist.id,
      "go" => order_map["Specialists"]
    }
    search_data << entry
  end


  clinics = Clinic.includes(
    :clinic_specializations,
    :locations => [
      {:address => :city},
      {:hospital_in => {:location => { :address => :city}}}
    ]
  ).complete_in(specialization).each do |clinic|
    entry = {
      "n" => clinic.name,
      "sp" => clinic.clinic_specializations.map{ |cs| cs.specialization_id },
      "c" => clinic.cities.map{ |city| city.id },
      "st" => clinic.status_class_hash,
      "id" => clinic.id,
      "go" => order_map["Clinics"]
    }
    search_data << entry
  end

  -%>
  pathways_all_search_data = pathways_all_search_data.concat(<%= search_data.to_json.html_safe %>);

<% end -%>
