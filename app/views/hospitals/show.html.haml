- set_page_specific_title @hospital.name

.tabbable
  #react_root--template

:javascript
  window.pathways = window.pathways || {};
  window.pathways.dataForReact.push(#{Oj.dump(@init_data)});

.content-wrapper

  %p.admin.btn-group
    - if can? :update, @hospital
      = link_to edit_hospital_path(@hospital),
        class: "btn" do
        %i.icon-pencil
        %span= " Edit Hospital"
    - if can? :destroy, @hospital
      = link_to hospital_path(@hospital),
        data: { confirm: "Delete #{@hospital.name}?" },
        method: :delete,
        class: "btn" do
        %i.icon-trash
        %span= " Delete Hospital"
