- set_page_specific_title "#{@news_item.title}"

.content-wrapper

  %h2= @news_item.title
  %p.space.no_indent
    %strong Division:
    = @news_item.division.name
  %p.space.no_indent
    %strong Start Date:
    = @news_item.start_date_full_regardless
  %p.space.no_indent
    %strong End Date:
    = @news_item.end_date_full_regardless
  %p.space.no_indent
    %strong Body:
    = BlueCloth.new(@news_item.body).to_html.html_safe
  %p.space.no_indent
    %strong Markdown:
  %p= @news_item.body

  %p.admin.btn-group
    - if can? :update, @news_item
      = link_to("<i class='icon-pencil'></i>".html_safe + " Edit", edit_news_item_path(@news_item), :class => "btn ajax")
    - if can? :destroy, @news_item
      = link_to("<i class='icon-trash'></i>".html_safe + " Delete", @news_item, :confirm => "Delete #{@news_item.title}?", :method => :delete, :class => "btn")
