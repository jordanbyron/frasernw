- set_page_specific_title "Divisions"

.content-wrapper

  %h2 Divisions

  %table.table.table-condensed.table-striped
    %tr
      %th Name
      %th Primary Contacts
      %th Cities
      %th.admin

    - @divisions.each do |division|
      %tr
        %td= link_to division.name, division, :class => 'ajax'
        %td
          %ul
            - division.primary_contacts.each do |primary_contact|
              %li= link_to primary_contact.name, primary_contact, :class => 'ajax'
        %td
          %ul
            -division.cities.each do |city|
              %li= link_to city.name, city_path(city), :class => 'ajax'
        %td.admin.btn-group
          = link_to("<i class='icon-pencil'></i>".html_safe + " Edit", edit_division_path(division), :class => "btn btn-mini ajax")
          = link_to("<i class='icon-trash'></i>".html_safe + " Delete", division, :confirm => "Delete #{division.name}?", :method => :delete, :class => "btn btn-mini")

  %p.admin= link_to("<i class='icon-plus-sign'></i>".html_safe + " New division", new_division_path, :class => "btn ajax")
