- set_page_specific_title "#{@sc_category.name}"

#react_root--template

.content-wrapper
  %hr

  %i.icon-envelope-alt
  Send us suggestions for #{@sc_category.name.downcase} content for Pathways:
  = mail_to "submissions@pathwaysbc.ca",
    "submissions@pathwaysbc.ca",
    subject: "#{@sc_category.name} content suggestion for Pathways"

  %p.admin.btn-group
  - if can? :update, @sc_category
    = link_to edit_sc_category_path(@sc_category), class: "btn" do
      %i.icon-pencil
      Edit #{@sc_category.name}
  - if can? :destroy, @sc_category
    %a.btn{ href: "javascript:void(0)",
      data: { toggle: "collapse", target: "#delete-sc_category-msg" } }
      %i.icon-trash
      Delete #{@sc_category.name}
  #delete-sc_category-msg.collapse
    .alert.alert-info{style: "margin-top: 10px"}
      %span
        Please go to
        = link_to "Content Categories", sc_categories_path
        to delete the content category of #{@sc_category.name} in its entirety.
