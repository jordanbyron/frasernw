!!!
%html

  %head
    %title= "FNW datatable"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{"name"=>"viewport", :content=>"initial-scale=1.0"}

    = stylesheet_link_tag "application", :media => 'screen, print'
    = javascript_include_tag "application"
    = csrf_meta_tag

  %script
    :plain
      (function(pathways) {
        store = pathways.createTableDataStore({
          address: "example",
          rowGenerator: pathways.rowGenerators.exampleTable,
          records: #{@records.to_json},
          headings: #{@table_headings.to_json}
        });
      }(window.pathways))

  %body
    .react_container
      = react_component "TableWithStore",
        storeAddress: "example"

      = react_component "Checkbox",
        label: "checkbox",
        initialValue: true

      = react_component "Selector",
        label: "selector",
        options: @select_options,
        initialValue: 2
