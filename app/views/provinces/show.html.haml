- set_page_specific_title "@province.name"

%h2= @province.name
%p
  %strong Abbreviation:
  = @province.abbreviation
%p
  %strong Symbol:
  = @province.symbol

%p.admin.btn-group
  - if can? :update, @province
    = link_to("<i class='icon-pencil'></i>".html_safe + " Edit", edit_province_path(@province), :class => "btn ajax")
  - if can? :destroy, @province
    = link_to("<i class='icon-trash'></i>".html_safe + " Delete", @province, :confirm => "Delete #{@province.name}?", :method => :delete, :class => "btn")
