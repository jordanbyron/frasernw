- set_page_specific_title "Provinces"

.content-wrapper

  %h2 Provinces

  %table.table.table-condensed.table-striped
    %tr
      %th Name
      %th Abbreviation
      %th Symbol
      %th.admin

    - @provinces.each do |province|
      %tr
        %td= link_to province.name, province, :class => 'ajax'
        %td= province.abbreviation
        %td= province.symbol
        %td.admin.btn-group
          = link_to("<i class='icon-pencil'></i>".html_safe + " Edit", edit_province_path(province), :class => "btn btn-mini ajax")
          = link_to("<i class='icon-trash'></i>".html_safe + " Delete", province, :data => { :confirm => "Delete #{province.name}?" }, :method => :delete, :class => "btn btn-mini")

  %p.admin= link_to("<i class='icon-plus-sign'></i>".html_safe + " New Province", new_province_path, :class => "btn ajax")
