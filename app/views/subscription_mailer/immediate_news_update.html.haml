!!!
%html
  %head
    %title
      = "#{@user.name} -- Pathways: #{@type_mask_description_formatted} has been added to #{@division} [#{@update_classification_type}]"
  %body
    %p
      = "#{@user.name}, "
      = "#{@type_mask_description_formatted.downcase} was just added to #{@division} on #{DateTime.now.strftime("%B, %d, %Y")}:"
    %br
    .activity
      %p
        = link_to "Click here to see it.", news_item_url(@activity.trackable)
      %br
    = render partial: "subscription_mailer/automatic_email_message",
      locals: { interval: @interval }
