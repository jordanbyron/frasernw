- set_page_specific_title @language.name

.tabbable
  #react_root--template

.content-wrapper

  %p.admin.btn-group
    - if can? :update, @language
      = link_to edit_language_path(@language),
        class: "btn" do
        %i.icon-pencil
        Edit Language
    - if can? :destroy, @language
      = delete_button(@language, "Delete #{@language.name}?")
